{
    "manifest_version": 2,
    "name": "Aller",
    "version": "1.0",
    "description": "Agrega un borde rojo a todas las p√°ginas web de mozilla.org.",
    "icons": {
      "48": "src/icons/icon-48.png"
    },
    "permissions": [
      "storage",
      "webRequest",
      "webRequestBlocking",
      "tabs",
      "activeTab",
      "*://*/",
      "clipboardRead",
      "clipboardWrite"
    ],
    "browser_action": {
      "default_icon": "src/icons/icon-48.png",
      "default_title": "Aller",
      "default_popup": "src/popup/html/popup.html"
    },
    "background": {
        "scripts": ["main.js"]
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["src/js/index.js"]
      }
    ] 
}  